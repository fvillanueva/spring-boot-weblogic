<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="FILE_LOGS_L" value="/u001/var/soaprima/logs/" /> <!-- Linux-->
    <property name="FILE_LOGS_W" value="D://appprimasoa/logs/" />  <!-- Windows -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="DailyRollingFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- Windows File-->
        <!-- <file>D://appprimasoa/logs/soaprima.log</file>-->

        <!-- Linux File -->
        <file>${FILE_LOGS_L}soaprima.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${FILE_LOGS_W}soaprima.log.%d</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%logger{36}] - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="DailyRollingFileAppender"/>
    </root>
</configuration>
